{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja"
    },
    {
      "name": "dev-base",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "DEV_MODE": "ON"
      }
    },
    {
      "name": "dev-build",
      "hidden": true,
      "inherits": "dev-base",
      "cacheVariables": {
        "TESTS_ENABLED": "OFF"
      }
    },
    {
      "name": "dev-test",
      "hidden": true,
      "inherits": "dev-base",
      "cacheVariables": {
        "TESTS_ENABLED": "ON",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "aot-debug-dev",
      "displayName": "AOT Debug (Dev)",
      "inherits": "dev-build",
      "binaryDir": "${sourceDir}/build/aot-debug-dev",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_AOT": "ON"
      }
    },
    {
      "name": "jit-debug-dev",
      "displayName": "JIT Debug (Dev)",
      "inherits": "dev-build",
      "binaryDir": "${sourceDir}/build/jit-debug-dev",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_AOT": "OFF"
      }
    },
    {
      "name": "aot-release-dev",
      "displayName": "AOT Release (Dev)",
      "inherits": "dev-build",
      "binaryDir": "${sourceDir}/build/aot-release-dev",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_AOT": "ON"
      }
    },
    {
      "name": "jit-release-dev",
      "displayName": "JIT Release (Dev)",
      "inherits": "dev-build",
      "binaryDir": "${sourceDir}/build/jit-release-dev",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_AOT": "OFF"
      }
    },
    {
      "name": "tests-aot-dev",
      "displayName": "Tests (AOT Mode) (Dev)",
      "inherits": "dev-test",
      "binaryDir": "${sourceDir}/build/tests-aot-dev",
      "cacheVariables": {
        "BUILD_AOT": "ON"
      }
    },
    {
      "name": "tests-jit-dev",
      "displayName": "Tests (JIT Mode) (Dev)",
      "inherits": "dev-test",
      "binaryDir": "${sourceDir}/build/tests-jit-dev",
      "cacheVariables": {
        "BUILD_AOT": "OFF"
      }
    },
    {
      "name": "aot-release",
      "displayName": "AOT Release",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/aot-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_AOT": "ON",
        "TESTS_ENABLED": "OFF"
      }
    },
    {
      "name": "jit-release",
      "displayName": "JIT Release",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/jit-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_AOT": "OFF",
        "TESTS_ENABLED": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "jit-release",
      "configurePreset": "jit-release"
    },
    {
      "name": "aot-release",
      "configurePreset": "aot-release"
    },
    {
      "name": "jit-debug-dev",
      "configurePreset": "jit-debug-dev"
    },
    {
      "name": "aot-debug-dev",
      "configurePreset": "aot-debug-dev"
    },
    {
      "name": "jit-release-dev",
      "configurePreset": "jit-release-dev"
    },
    {
      "name": "aot-release-dev",
      "configurePreset": "aot-release-dev"
    },
    {
      "name": "tests-jit-dev",
      "configurePreset": "tests-jit-dev"
    },
    {
      "name": "tests-aot-dev",
      "configurePreset": "tests-aot-dev"
    }
  ],
  "testPresets": [
    {
      "name": "tests-jit-dev",
      "displayName": "Run JIT Tests (Dev Mode)",
      "configurePreset": "tests-jit-dev",
      "output": {
        "outputOnFailure": true,
        "verbosity": "verbose"
      }
    },
    {
      "name": "tests-aot-dev",
      "displayName": "Run AOT Tests (Dev Mode)",
      "configurePreset": "tests-aot-dev",
      "output": {
        "outputOnFailure": true,
        "verbosity": "verbose"
      }
    }
  ]
}
